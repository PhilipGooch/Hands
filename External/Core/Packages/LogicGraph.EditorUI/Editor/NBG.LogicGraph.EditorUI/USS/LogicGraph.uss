GridBackground {
    --grid-background-color: rgb(40, 40, 40);
    --line-color: rgba(193, 196, 192, 0.1);
    --thick-line-color: rgba(193, 196, 192, 0.1);
    --spacing: 15;
}

.rootContainer-view {
    flex-direction: row;
    padding: 3px;
}

.horizontal {
    flex-direction: row;
}

.vertical {
    flex-direction: column;
}

.blackboard-universal-variable-view {
    border-width: 1px;
    border-color: rgb(25, 25, 25);
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    border-radius: 6px;
    margin-bottom: 1px;
    min-width: 200px;
}

.blackboard-drag-view {
    background-color: rgb(56, 56, 56);
    border-radius: 6px;
    min-height: 50px;
    min-width: 100px;
    position: absolute;
}

.graph-view-parent {
    min-width: 487px;
}

.graph-view {
    margin: 1px;
    flex-grow: 1;
}

.node-view {
    position: absolute;
    min-width: 150px;
    min-height: 100px;
    background-color: rgb(0, 82, 255);
}

.node-view-port-button-view {
    height: 20px;
    width: 20px;
    padding: 1px;
}

.node-breakpoint-view {
    position: absolute;
    width: 10px;
    height: 10px;
    border-width: 1px;
    border-color: rgb(255, 255, 255);
    background-color: rgb(255, 0, 0);
    border-radius: 5px;
}

.node-api-indicator-view {
    position: absolute;
    width: 15px;
    height: 15px;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 5px;
    left: -3px;
    top: -3px;
}

.node-target-object-ping-button-view {
    width: 20px;
    height: 20px;
    border-left-width: 1px;
    border-right-width: 1px;
    border-top-width: 1px;
    border-bottom-width: 1px;
    border-top-left-radius: 1px;
    border-bottom-left-radius: 1px;
    border-top-right-radius: 1px;
    border-bottom-right-radius: 1px;
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 3px;
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    background-color: rgba(0, 0, 0, 0);
}

.node-flavor-text-view {
    -unity-font-style: italic;
    padding-left: 20px;
}

.port-divider-view {
    width: 100%;
    height: 1px;
    background-color: rgb(204, 204, 204);
}

.tabs-header-container {
    border-bottom-color: rgb(87, 87, 87);
    border-bottom-width: 1px;
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
    border-left-color: rgb(87, 87, 87);
    border-right-color: rgb(87, 87, 87);
    border-top-color: rgb(87, 87, 87);
    flex-direction: row;
    height: 22px;
    min-width: 22px;
    min-height: 22px;
    width: 100%;
}

.tabs-header-label {
    -unity-text-align: middle-left;
    -unity-font-style: bold;
    margin-left: 3px;
    margin-right: 3px;
}

.tabs-content-container {
    padding-left: 2px;
    padding-right: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
}

.inspector-view {
    max-height: 100%;
    min-height: 100%;
}

.inspector-root-container {
    align-items: flex-start;
    padding: 5px;
}

.inspector-segment-label {
    margin-left: 3px;
    -unity-font-style: italic;
}

.comment-view-label {
    margin-left: 3px;
    margin-right: 3px;
    margin-top: 1px;
    margin-bottom: 1px;
    padding-left: 0;
    padding-right: 0;
    flex-shrink: 1;
    flex-grow: 1;
    border-width: 1px;
}

.comment-view-text-field {
    flex-grow: 1;
    flex-shrink: 1;
    margin: 0;
    padding: 0;
    border-width: 0;
    -unity-text-align: upper-left;
}

#groupColorPicker {
    margin: 8px;
    width: 50px;
}

.toast-container {
    min-width: 250px;
    background-color: rgba(0, 0, 0, 0.21);
    min-height: 50px;
    max-height: 50px;
    border-top-left-radius: 1px;
    border-bottom-left-radius: 1px;
    border-top-right-radius: 1px;
    border-bottom-right-radius: 1px;
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 1px;
    margin-bottom: 1px;
}

.searcher-filter-icon {
    background-image: resource('searchIcon');
    width: 17px;
    height: 17px;
    background-color: rgba(0, 0, 0, 0);
    -unity-background-image-tint-color: rgb(164, 164, 164);
    margin: 2px;
}

.searcher-node-group-icon {
    width: 15px;
    height: 15px;
    margin-right: 2px;
    min-width: 15px;
    min-height: 15px;
}

.searcher-resizable-dragger-view {
    width: 15px;
    height: 4px;
    right: 1px;
    bottom: 1px;
    background-color: rgb(212, 212, 212);
    padding: 1px;
    min-height: 4px;
}

.searcher-resizable-dragger-container {
    position: absolute;
    right: 0;
    bottom: 0;
}

.settings-view-segment-view {
    padding-left: 1px;
    padding-right: 1px;
    padding-top: 1px;
    padding-bottom: 1px;
    margin-left: 1px;
    margin-right: 1px;
    margin-top: 1px;
    margin-bottom: 1px;
}
