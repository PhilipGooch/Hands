<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" nbg="NBG.LogicGraph.EditorUI" editor-extension-mode="True" name="inspector" class="inspector-view">
    <Style src="/Packages/com.nobrakesgames.logicgraph.editorui/Editor/NBG.LogicGraph.EditorUI/USS/LogicGraph.uss" />
    <ui:VisualElement name="rootContainer" class="inspector-root-container" style="padding-left: 0; padding-right: 0; padding-top: 0; padding-bottom: 0; max-width: 300px;">
        <ui:VisualElement name="headerContainer" class="tabs-header-container">
            <ui:Label text="Inspector" display-tooltip-when-elided="true" name="header" class="tabs-header-label" />
            <uie:ToolbarSpacer />
            <ui:Label display-tooltip-when-elided="true" name="nodeName" style="-unity-text-align: middle-left;" />
        </ui:VisualElement>
        <ui:ScrollView scroll-deceleration-rate="0,135" elasticity="0,1" name="contentContainer" class="tabs-content-container" style="flex-grow: 1; width: 100%;">
            <ui:Box name="nodeDetailsContainer" style="width: 100%; min-width: 100%;">
                <NBG.LogicGraph.EditorUI.EventNodeBuilder name="eventNodeBuilder" />
            </ui:Box>
            <ui:Box name="scriptInspector" style="width: 100%; min-width: 100%;">
                <ui:VisualElement name="labelContainer" style="flex-direction: row;">
                    <ui:VisualElement name="gameObjectIcon" style="width: 17px;" />
                    <ui:Label text="Target Script Inspector" display-tooltip-when-elided="true" class="inspector-segment-label" style="flex-direction: row;" />
                </ui:VisualElement>
                <ui:VisualElement name="contentContainer" style="flex-grow: 1;" />
            </ui:Box>
            <ui:VisualElement name="messageContainer" style="align-items: center; justify-content: center; background-color: rgba(135, 135, 135, 0.53);">
                <ui:Label text="Multiselection not supported!" display-tooltip-when-elided="true" style="color: rgb(255, 51, 51);" />
            </ui:VisualElement>
        </ui:ScrollView>
    </ui:VisualElement>
</ui:UXML>
