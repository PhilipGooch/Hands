<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" nbg="NBG.LogicGraph.EditorUI" editor-extension-mode="True">
    <Style src="/Packages/com.nobrakesgames.logicgraph.editorui/Editor/NBG.LogicGraph.EditorUI/USS/LogicGraph.uss" />
    <ui:VisualElement name="rootContainer" style="justify-content: space-between; flex-grow: 1; margin-left: 1px; margin-right: 1px; margin-top: 1px; margin-bottom: 1px; flex-direction: row;">
        <NBG.LogicGraph.EditorUI.BlackboardView name="blackboard" style="min-width: 130px;" />
        <NBG.LogicGraph.EditorUI.SearchersInspector name="searcherViewsContainer" class="inspector-view" style="max-width: 250px; min-width: 250px;" />
        <ui:VisualElement name="toolbarAndGraphContainer" style="min-width: 250px; flex-grow: 1;">
            <NBG.LogicGraph.EditorUI.GraphToolbarView name="toolbar" style="height: 22px; flex-grow: 1; max-height: 22px;" />
            <NBG.LogicGraph.EditorUI.LogicGraphView name="graphView" class="graph-view" style="position: relative;" />
            <NBG.LogicGraph.EditorUI.SettingsView name="dropDownSettings" style="position: absolute; top: 22px;" />
        </ui:VisualElement>
        <NBG.LogicGraph.EditorUI.InspectorView name="inspectorView" style="overflow: hidden;" />
    </ui:VisualElement>
</ui:UXML>
