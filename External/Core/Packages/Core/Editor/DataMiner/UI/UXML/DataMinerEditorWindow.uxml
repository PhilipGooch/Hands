<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" xmlns="UnityEngine.UIElements" editor-extension-mode="True">
    <ui:VisualElement name="menuBar" style="min-height: 80px;">
        <ui:Box name="toolbar" style="flex-direction: row;">
            <ui:Button name="fileLoader" class="button" style="width: 18px; height: 18px;" />
            <ui:Button name="settingsBtn" class="settings-button button" style="width: 18px; height: 18px;" />
            <uie:ToolbarMenu name="addComponent" text="Add view" />
        </ui:Box>
        <ui:Box name="toolbar" class="vertical">
            <ui:VisualElement class="horizontal">
                <ui:TextElement name="sliceDetails" />
            </ui:VisualElement>
            <ui:MinMaxSlider name="frameSelector" />
        </ui:Box>
    </ui:VisualElement>
    <ui:ScrollView name="scroller" horizontal-scroller-visibility="Hidden" class="scroller" />
</ui:UXML>
