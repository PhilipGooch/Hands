:root
{
     padding : 10px;
     --color-borderC: #6B6B6B;
     --color-backgroundDark: #35353A;
     --color-backgroundLight: #B9B9B9;
     --color-gridLinesDark: rgb(60,60,64);
     --color-gridLinesLight: rgb(192, 192, 192);
}

Label {
    font-size: 13px;
    -unity-font-style: bold;
}

.horizontal{
    flex-direction: row;
}

.vertical{
    flex-direction: column;
}

.line-graph-checkbox-selector{
    flex-direction: row;
}
.tooltip{
     border-color:var(--color-borderC);
     border-width:1px;
     position: absolute;

}
.settings-button{
    background-image: resource("settingsIcon.png");
    -unity-background-image-tint-color:#000000;
}
.settings-popup{
    margin:3px;
    border-color:var(--color-borderC);
    border-width:1px;
    width:100%;
}

.dark-background{
    background-color:var(--color-backgroundDark);
}
.light-background{
    background-color:var(--color-backgroundLight);
}

.button{
    border-radius:0px;
    margin:1px;
}

.component{
}

.component-msLine
{
    width : 100%;
    height : 1px;
    background-color: #00e1ff;
    position: absolute;
}

/* ----------- graph plot classes ----------- */

.component-graph{
    margin:3px;
    
    padding-bottom:1px;
    padding-top:5px;

    min-height: 50px;
    max-height: 300px;
    
    border-color:var(--color-borderC);
   
}

.graph-bg{
}

.graph-column {
   position : absolute;

   bottom : 0px;
   margin : 0px;
   padding : 0px;
   border-width:1px;
   border-radius:0px;
}

.graph-column-border {
   border-width:1px;
   border-radius:0px;
   border-color:var(--color-backgroundDark);
}

.graph-plot-elements-parent{
    width:100%;
    height:100%;
}

.graph-point{
    position : absolute;
    width : 4px;
    height : 4px;
    background-color : rgb(219, 76, 64);
}

.graph-grid-lines
{
    position : absolute;
    width: 1px;
}

.graph-dark-grid-lines
{
    background-color :var(--color-gridLinesDark);
}

.graph-light-grid-lines
{
    background-color : var(--color-gridLinesLight);
}

.graph-grid-lines-selected
{
    background-color : rgb(131, 171, 211);
}
/* ------------------------------------ */

