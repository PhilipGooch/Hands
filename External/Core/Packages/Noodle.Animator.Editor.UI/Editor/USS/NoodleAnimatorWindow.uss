:root {
}

.key-view-root {
    position: absolute;
    height: 100%;
    width: 100%;
    border-radius: 5px;
    background-image: resource('keyframe');
    background-color: rgba(0, 0, 0, 0);
}

.elements-root {
    flex-direction: row;
    flex-grow: 1;
}

.toolbar-view-root {
    flex-direction: column;
}

.timeline-view-root {
}

.timeline-top-view {
    height: 30px;
    position: absolute;
    background-color: rgba(200, 200, 200, 0.7);
}

.timeline-top-text-view {
    -unity-text-align: middle-center;
    position: absolute;
    color: rgb(0, 0, 0);
}

.timeline-horizontal-line-view {
    border-color: rgba(0, 0, 0, 0.2);
    border-width: 1px;
    position: absolute;
}

.timeline-scroll-content {
    flex-direction: row;
}

.timeline-transition-line-view {
    position: absolute;
    height: 2px;
    align-items: center;
    justify-content: center;
}

.timeline-cursor-view {
   position: absolute;
   background-color: rgba(0, 0, 0, 0.6);
}

.timeline-pivot-view {
    background-image: resource('cross');
    background-color: rgba(255, 255, 255, 0);
    -unity-background-image-tint-color: rgba(252, 186, 3, 0.8);
}

.timeline-column-view {
    height: 100%;
    position: absolute;
    bottom: 0;
    margin-left: 0;
    padding-left: 0;
    border-left-width: 0;
    margin-right: 0;
    padding-right: 0;
    border-right-width: 0;
}

.inspector-view-root {
    min-height: auto;
    min-width: 300px;
    max-width: 300px;
    flex-grow: 1;
    flex-shrink: 0;
}

.inspector-group-view {
    padding-top: 0;
    padding-bottom: 0;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-left: 40%;
}
.inspector-group-view-foldout-button-view {
    right: 0px;
    justify-content: space-around;
    border-width: 0px;
    background-color: rgba(56, 56, 56, 0);
}

.inspector-group-field-view-root {
    flex-direction: row;
    justify-content: space-between;
    margin-left: 3px;
    flex-grow: 1;
}

.inspector-group-label {
    -unity-font-style: bold;
    font-size: 15px;
    -unity-text-align: upper-center;
}

.drag-selection-indicator-view {
    position: absolute;
    background-color: rgba(125, 125, 125, 0.2);
}
