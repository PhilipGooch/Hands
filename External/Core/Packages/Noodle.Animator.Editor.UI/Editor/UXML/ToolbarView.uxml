<ui:UXML xmlns:ui="UnityEngine.UIElements" xmlns:uie="UnityEditor.UIElements" editor-extension-mode="True" class="toolbar-view-root">
    <Style src="../USS/NoodleAnimatorWindow.uss" />
    <ui:VisualElement name="settingsParent" style="flex-direction: row;">
        <ui:Button display-tooltip-when-elided="true" name="openSettings" style="background-image: resource(&apos;settingsIcon&apos;); -unity-background-image-tint-color: rgb(0, 43, 125); padding-left: 0; padding-right: 0; padding-top: 0; padding-bottom: 0; min-width: 20px;" />
        <ui:Button text="Edit" display-tooltip-when-elided="true" name="edit" />
        <ui:Button text="Play" display-tooltip-when-elided="true" name="play" />
        <ui:Button text="Preview" display-tooltip-when-elided="true" name="preview" />
        <uie:IntegerField label="Timeline Length" value="42" name="timelineLength" />
        <uie:IntegerField label="Selected Frame" value="42" name="selectedFrame" />
        <uie:FloatField label="Playback speed" value="0" name="playbackSpeed" />
        <ui:Toggle label="Looping" name="looping" />
        <uie:ObjectField label="File" name="animationFile" />
    </ui:VisualElement>
    <ui:VisualElement name="additionalSettingsParent" style="flex-direction: row;">
        <ui:Button text="Debug Mode Toggle" display-tooltip-when-elided="true" name="toggleDebugMode" style="max-width: 170px;" />
        <uie:FloatField label="Turn Speed" name="turnSpeed" />
        <uie:Vector2Field label="Root Motion" name="moveOverride" />
        <ui:Toggle label="Hide tracks with no data" name="hideNoDataTracks" />
        <ui:Toggle label="Show Debug Gizmos" name="showDebugGizmos" />
    </ui:VisualElement>
</ui:UXML>
